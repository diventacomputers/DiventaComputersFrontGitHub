# ===================================
# Forzar HTTPS
# ===================================
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Redirige HTTP → HTTPS (301 permanente)
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  RewriteBase /

  # ===================================
  # React Router SPA (sirve index.html si no existe el archivo)
  # ===================================
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  RewriteRule ^ index.html [L]
</IfModule>


# ===================================
# Compresión Gzip / Brotli
# ===================================

# GZIP
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css text/javascript
  AddOutputFilterByType DEFLATE application/javascript application/json application/xml
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# BROTLI (máxima compresión recomendada 6–7)
<IfModule mod_brotli.c>
  BrotliCompressionQuality 7
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css text/javascript \
    application/javascript application/json image/svg+xml
</IfModule>


# ===================================
# Cache estática (Vite build)
# ===================================
<IfModule mod_expires.c>
  ExpiresActive On

  # Vite assets tienen nombres con hash — seguros para cache agresiva
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/json "access plus 1 year"
  ExpiresByType image/* "access plus 1 year"

  # Otros archivos: cache estándar
  ExpiresDefault "access plus 1 month"
</IfModule>


# ===================================
# Seguridad
# ===================================

# No listar directorios
Options -Indexes

# Bloquear archivos privados
<FilesMatch "\.(env|log|config|md|env\.example)$">
  Require all denied
</FilesMatch>

# Proteger .htaccess
<Files ".htaccess">
  Require all denied
</Files>
